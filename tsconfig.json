{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noLib": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
        "@my/*": [
            "src/*"
        ],
        "*": [
            "packages/*",
            "node_modules/*"
        ]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
