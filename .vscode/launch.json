{
    // Use IntelliSense to find out which attributes exist for node debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // API - Attach
        /////////////////////////////////////
        {
            "name": "API - Attach",
            "type": "node",
            "request": "attach",
            "port": 60606,
            "restart": true,
            "protocol": "inspector",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "node_modules/**/*.js",
            ]
        },
        // API - Launch
        /////////////////////////////////////
        {
            "name": "API - Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/start-dev.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "develop"
            },
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "node_modules/**/*.js",
            ]
        },
    ]
}
